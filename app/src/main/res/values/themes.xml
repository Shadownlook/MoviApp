<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.MoviApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personaliza los colores del tema -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Estilo de la barra de acción -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Estilo del texto -->
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Estilo personalizado para la barra de acción -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <!-- Estilo del título de la barra de acción -->
    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilos para texto -->
    <style name="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
