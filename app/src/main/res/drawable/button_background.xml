<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3700B3"/> <!-- Color más oscuro al presionar -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#6200EE"/> <!-- Color primario del botón -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
